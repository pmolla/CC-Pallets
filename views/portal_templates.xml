<odoo>
    <!-- Inherit the portal homepage and add a new menu item -->
    <template id="portal_my_cuenta_corriente" inherit_id="portal.portal_my_home" name="Portal Cuenta Corriente Menu">
        <!-- Locate an existing element in the parent view -->
        <xpath expr="//div[contains(@class, 'o_portal_my_home')]" position="inside">
            <ul>
                <li>
                    <a t-att-class="'active' if request.httprequest.path.startswith('/my/cuenta_corriente') else ''"
                        t-att-href="'/my/cuenta_corriente'">
                        Cuenta Corriente
                    </a>
                </li>
            </ul>
        </xpath>
    </template>

    <!-- List View -->
    <template id="portal_cuenta_corriente_list" name="Portal Cuenta Corriente List">
        <t t-call="portal.layout">
            <div class="container">
                <h1>Cuenta Corriente</h1>
                <ul>
                    <t t-foreach="records" t-as="record">
                        <li>
                            <a t-att-href="'/my/cuenta_corriente/%s' % record.id">
                                <t t-esc="record.x_studio_pallet"/> <!-- Adjust the field name if needed -->
                            </a>
                        </li>
                    </t>
                </ul>
            </div>
        </t>
    </template>

    <!-- Detail View -->
    <template id="portal_cuenta_corriente_detail" name="Portal Cuenta Corriente Detail">
        <t t-call="portal.layout">
            <div class="container">
                <h1><t t-esc="record.x_studio_pallet"/></h1>
                <p><strong>Customer:</strong> <t t-esc="record.x_studio_client"/></p>
                <!-- Add more fields as needed -->
            </div>
        </t>
    </template>
</odoo>
