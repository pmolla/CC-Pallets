<odoo>
    <!-- List View -->
    <template id="portal_cuenta_corriente_list" name="Portal Cuenta Corriente List">
        <t t-call="portal.layout">
            <div class="container">
                <h1>Cuenta Corriente</h1>
                <ul>
                    <t t-foreach="records" t-as="record">
                        <li>
                            <a t-att-href="'/my/cuenta_corriente/%s' % record.id">
                                <t t-esc="record.name"/> <!-- Replace 'name' with a valid field -->
                            </a>
                        </li>
                    </t>
                </ul>
            </div>
        </t>
    </template>

    <!-- Detail View -->
    <template id="portal_cuenta_corriente_detail" name="Portal Cuenta Corriente Detail">
        <t t-call="portal.layout">
            <div class="container">
                <h1><t t-esc="record.name"/></h1> <!-- Replace 'name' with a valid field -->
                <p><strong>Client:</strong> <t t-esc="record.x_studio_cliente"/></p>
                <!-- Add more fields as needed -->
            </div>
        </t>
    </template>
</odoo>
