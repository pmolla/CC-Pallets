<odoo>
    <!-- Extend the "My Account" Menu -->
    <template id="portal_my_cuenta_corriente" inherit_id="portal.portal_my_home" name="Portal Cuenta Corriente Menu">
        <xpath expr="//div[@id='o_portal_my_home']/ul" position="inside">
            <li>
                <a t-att-class="'active' if request.httprequest.path.startswith('/my/cuenta_corriente') else ''"
                   t-att-href="'/my/cuenta_corriente'">
                    Cuenta Corriente
                </a>
            </li>
        </xpath>
    </template>
</odoo>
